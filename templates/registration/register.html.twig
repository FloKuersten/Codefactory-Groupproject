<body class="row row-cols-1" id="registerBodyContainer">


    <div class="col d-flex justify-content-center align-items-center p-0">
        <div class="row row-cols-1 flex-stretch align-items-end justify-content-center" id="registerFormContainer">
            <form class="col d-flex flex-column pb-4" id="formIMG">
                <div class="mb-3 text-center">
