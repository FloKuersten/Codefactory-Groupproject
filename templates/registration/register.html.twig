{% block title %}Register{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block body %}
<div class="row row-cols-1" id="registerBodyContainer">
    <div class="col d-flex justify-content-center align-items-center p-0">
        <div class="row row-cols-1" id="registerFormContainer">
            <div class="col d-flex flex-column p-4" id="formIMG">
                <h1 class="text-center mb-4">Register</h1>


    {{ form_start(registrationForm) }}
     {{ form_row(registrationForm.name ,{'attr': {'class': 'bg-info border-0 text-white form-control'}})}}
      {{ form_row(registrationForm.last_name ,{'attr': {'class': 'bg-info border-0 text-white form-control'}})}}
      {{ form_row(registrationForm.birthday ,{'attr': {'class': 'bg-info border-0 text-white form-control'}})}}
      {{ form_row(registrationForm.email ,{'attr': {'class': 'bg-info border-0 text-white form-control'}})}}
    <button type="submit" class="btn btn-success m-2">Register</button>
    {{ form_end(registrationForm) }}

</div>
</div>
</div></div>

