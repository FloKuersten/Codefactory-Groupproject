{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ service.amount }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ service.startDate ? service.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ service.endDate ? service.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ service.subject }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ service.picture }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ service.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_service_index') }}">back to list</a>

    <a href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>

    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
